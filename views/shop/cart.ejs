<body>
<%- include('../includes/navigation.ejs') %>
<main>
  <% if (products.length > 0 ) { %>
    <ul>
      <!-- interating over products array with help og forEach method, which take current item as product -->
      <% products.forEach(p => { %>
        <!-- outputting the product info -->
        <!-- refference: cartProducts.push({productData: product, qty: CartproductData.qty}); -->
        <!-- output: book (2) -->
        <li><%= p.productData.title %> (<%= p.qty %>)</li>
      <% }) %>
    </ul>
  <% } else { %>
    <h1>No Cart Products!!</h1>
  <% } %>

</main>


<%- include('../includes/end.ejs') %>